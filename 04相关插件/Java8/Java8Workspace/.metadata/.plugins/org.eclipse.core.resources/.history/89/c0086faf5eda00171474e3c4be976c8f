package PPT;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class TestDateFormatThread extends Thread {

	@Override
	public void run() {
		SimpleDateFormat dFormat=new SimpleDateFormat("yyyyMMdd");
		try {
			System.out.println(dFormat.parse("20171206").toString());
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
//		for(int i=0;i<1;i++){
//			TestDateFormatThread dateFormatThread=new TestDateFormatThread();
//			dateFormatThread.start();
			SimpleDateFormat dFormat=new SimpleDateFormat("yyyyMMdd");
			System.out.println(dFormat.format(new Date("20171206")));
//		}
	}
}
